<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/main_bckg</item>
        <item name="android:navigationBarColor">@color/main_bckg</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText_1" parent="AppTheme" >
        <!-- Primary brand color. -->

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#343434</item>
        <item name="android:background">@drawable/editext</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">16sp</item>
    </style>
    <style name="Button_1" parent="AppTheme"  >
        <!-- Primary brand color. -->
        <!-- всратая гугловская идея бекграунд потому пока вручную,
        нихуя не работает со стилей-->
        <item name="android:background">@drawable/button_theme</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>