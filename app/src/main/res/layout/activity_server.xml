<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bckg"
    tools:context=".activity.login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_waves_red" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/very_big_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="75sp"
                    android:layout_marginRight="20sp"
                    android:text="Пароль(4 символа)"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <LinearLayout
                    style="@style/EditText_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:orientation="horizontal"
                    android:padding="0sp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/port"
                            style="@style/EditText_1"
                            android:layout_width="match_parent"
                            android:layout_height="55sp"
                            android:layout_marginLeft="0sp"
                            android:layout_marginTop="2sp"
                            android:layout_marginRight="0sp"
                            android:layout_marginBottom="0sp"
                            android:ems="10"
                            android:hint="Пароль"
                            android:inputType="phone"
                            android:maxLength="4"
                            android:textColorHint="@color/color4"
                            android:textDirection="rtl"
                            android:textSize="@dimen/edt_txt_size" />

                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp">

                    <EditText
                        android:id="@+id/filetext"
                        style="@style/EditText_1"
                        android:layout_width="match_parent"
                        android:layout_height="55sp"
                        android:layout_marginLeft="0sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="0sp"
                        android:layout_marginBottom="0sp"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Аудіо файл"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:textColorHint="@color/color4"
                        android:textDirection="rtl"
                        android:textSize="@dimen/edt_txt_size" />

                    <Button
                        android:id="@+id/openfile"
                        style="@style/Button_1"
                        android:layout_width="100sp"
                        android:layout_height="55sp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="0sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="0sp"
                        android:layout_marginBottom="0sp"
                        android:onClick="openfile"
                        android:text="Відкрити файл"
                        android:textColor="@color/color7"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50sp"
                    android:text="Зупинено"
                    android:textSize="20sp" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/create_server"
                        style="@style/Button_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="30sp"
                        android:layout_marginRight="20sp"
                        android:onClick="onCreateChanel"
                        android:text="Старт"
                        android:textColor="@color/color7"
                        android:textSize="@dimen/edt_txt_size" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>