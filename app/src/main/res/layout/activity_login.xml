<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bckg"
    tools:context=".activity.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_waves" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/color8"
            android:textSize="@dimen/very_big_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="100sp"
            android:layout_marginRight="20sp"
            android:text="Авторизація"
            android:textSize="16sp"
            android:textStyle="italic" />

        <LinearLayout
            style="@style/EditText_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal"
            android:padding="0sp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:ccp_autoDetectCountry="true"
                app:ccp_countryAutoDetectionPref="NETWORK_ONLY"
                app:ccp_countryPreference="iz"
                app:ccp_showFullName="false"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="true">

            </com.hbb20.CountryCodePicker>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login"
                    style="@style/EditText_1"
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginBottom="0sp"
                    android:ems="10"
                    android:hint="Телефон"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:textColorHint="@color/color4"
                    android:textDirection="rtl"
                    android:textSize="@dimen/edt_txt_size" />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pass"
                style="@style/EditText_1"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginTop="2sp"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColorHint="@color/color4"
                android:textDirection="rtl"
                android:textSize="@dimen/edt_txt_size" />

        </FrameLayout>

        <Button
            android:id="@+id/logbut"
            style="@style/Button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="20sp"
            android:text="Авторизуватися"
            android:textColor="@color/color7"
            android:textSize="@dimen/edt_txt_size" />

    </LinearLayout>


</FrameLayout>